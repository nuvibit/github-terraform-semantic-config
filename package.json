{
  "name": "@nuvibit/github-terraform-semantic-release-config",
  "description": "semantic-release shareable config to create release of Terraform Modules.",
  "version": "1.0.0",
  "author": "@stefano-franco (https://github.com/stefano-franco)",
  "bugs": {
    "url": "https://github.com/nuvibit/github-terraform-semantic-release-config/issues"
  },
  "contributors": [
    "@stefano-franco (https://github.com/stefano-franco)"
  ],
  "dependencies": {
    "@google/semantic-release-replace-plugin": "1.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1"
  },
  "devDependencies": {
    "semantic-release": "^19.0.2",
    "xo": "^0.48.0"
  },
  "engines": {
    "node": ">=10.18"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/nuvibit/github-terraform-semantic-release-config#readme",
  "keywords": [
    "terraform",
    "terraform-modules",
    "conventional-changelog",
    "release",
    "semantic-release",
    "semantic-release-config",
    "version"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "semantic-release": ">=16.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuvibit/github-terraform-semantic-release-config.git"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "test": "xo"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "unicorn/string-content": "off"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "${version}"
  }
}
