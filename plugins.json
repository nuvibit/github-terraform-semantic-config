[
    [
        "@semantic-release/commit-analyzer",
        {
            "preset": "conventionalcommits",
            "releaseRules": [
                {
					"type": "build",
					"release": "patch"
				},
				{
					"type": "ci",
					"release": "patch"
				},
				{
					"type": "chore",
					"release": "patch"
				},
				{
					"type": "docs",
					"release": "patch"
				},
				{
					"type": "refactor",
					"release": "patch"
				},
				{
					"type": "style",
					"release": "patch"
				},
				{
					"type": "test",
					"release": "patch"
				}
            ],
            "parserOpts": {
                "noteKeywords": [
                    "BREAKING CHANGE",
                    "BREAKING CHANGES",
                    "BREAKING"
                ]
            }
        }
    ],
    [
        "@semantic-release/release-notes-generator",
        {
            "preset": "conventionalcommits",
            "parserOpts": {
                "noteKeywords": [
                    "BREAKING CHANGE",
                    "BREAKING CHANGES",
                    "BREAKING"
                ]
            }
        }
    ],
    [
        "@semantic-release/changelog",
        {
            "changelogFile": "CHANGELOG.md"
        }
    ],
    [
        "@semantic-release/git",
        {
            "assets": [
                "CHANGELOG.md"
            ]
        }
    ],
    [
        "@semantic-release/github",
        {
            "assets": [
                "CHANGELOG.md"
            ]
        }
    ]
]